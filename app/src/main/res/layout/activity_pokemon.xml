<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="1536dp"
    android:layout_height="1280dp"
    tools:context=".Beginscherm" >

    <ImageView
        android:id="@+id/imageView1"
        android:contentDescription="@+id/imageView1"
        android:layout_width="768dp"
        android:layout_height="640dp"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="0dp"
        android:src="@drawable/pallet_town" />

    <ImageView
        android:id="@+id/imageView2"
        android:contentDescription="@+id/imageView2"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="140dp"
        android:layout_marginTop="220dp"
        android:src="@drawable/deur"
        android:onClick="deur" />

    <ImageView
        android:id="@+id/imageView3"
        android:contentDescription="@+id/imageView3"
        android:layout_width="28dp"
        android:layout_height="42dp"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="100dp"
        android:layout_marginTop="60dp"
        android:src="@drawable/ash" />

</RelativeLayout>